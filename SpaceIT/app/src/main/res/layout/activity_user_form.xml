<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserForm"
    android:background="#fff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name:"
        android:id="@+id/textView3"
        android:textColor="#555"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plateText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#555"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="CONTINUE"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#2196f3"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/abc_select_dialog_padding_start_material"
        android:focusableInTouchMode="true"
        android:onClick="changeToPlates"
        android:longClickable="false"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Institutional Mail:"
        android:id="@+id/textView4"
        android:textColor="#555"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/plateText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/mailText"
        android:textColor="#555"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER INFORMATION"
        android:id="@+id/textView5"
        android:textColor="#2196f3"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/textView6"
        android:layout_marginBottom="37dp"
        android:layout_margin="10dp"
        android:spinnerMode="dropdown"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kind of Parking Slot"
        android:id="@+id/textView6"
        android:textColor="#555"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/mailText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
